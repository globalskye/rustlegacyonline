# =============================================
# ВСЕ ПАРОЛИ И НАСТРОЙКИ — ОДНО МЕСТО
# Скопируй в .env и измени под себя:
#   cp .env.example .env
# =============================================

# --- База данных PostgreSQL ---
DB_USER=rustlegacy
DB_PASSWORD=rustlegacy_password
DB_NAME=rustlegacy
DB_HOST=postgres
DB_PORT=5432

# Adminer подключается к PostgreSQL — те же логин/пароль (DB_USER, DB_PASSWORD, DB_NAME)
# Сервер в Adminer: postgres

# --- Бэкенд ---
PORT=8000
JWT_SECRET=change-me-in-production

# --- PayGate.to (платежи) ---
# USDC (Polygon) кошелёк для получения выплат
PAYGATE_MERCHANT_WALLET=0x42d14c5e45744d152585CDb7F75c2cA9E67776B8
# URL сайта для callback PayGate (без слэша в конце)
SITE_URL=https://rustlegacy.online

# --- RCON (выдача товаров в магазине) ---
RCON_HOST=127.0.0.1
RCON_PORT=28016
RCON_PASSWORD=your_rcon_password

# --- Синхронизация статистики (TopSystem плагин) ---
STATS_SYNC_ENDPOINT=

# --- Фронтенд ---
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_YANDEX_METRIKA_ID=
REACT_APP_ADMINER_URL=http://localhost:8081
