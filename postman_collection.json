{
  "info": {
    "name": "Rust Legacy API",
    "description": "API endpoints для Rust Legacy сервера",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Server Info",
      "item": [
        {
          "name": "Get Server Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/server-info",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "server-info"]
            }
          }
        },
        {
          "name": "Update Server Info",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"name\": \"My Rust Server\",\n  \"maxPlayers\": 150,\n  \"gameVersion\": \"Legacy\",\n  \"downloadUrl\": \"https://example.com/download\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/server-info",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "server-info"]
            }
          }
        }
      ]
    },
    {
      "name": "Features",
      "item": [
        {
          "name": "Get Features (Russian)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/features?lang=ru",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "features"],
              "query": [
                {
                  "key": "lang",
                  "value": "ru"
                }
              ]
            }
          }
        },
        {
          "name": "Create Feature",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"serverInfoId\": 1,\n  \"language\": \"ru\",\n  \"title\": \"Новая особенность\",\n  \"description\": \"Описание новой особенности\",\n  \"icon\": \"zap\",\n  \"order\": 5\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/features",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "features"]
            }
          }
        }
      ]
    },
    {
      "name": "News",
      "item": [
        {
          "name": "Get News (Published, Russian)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/news?lang=ru&published=true",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "news"],
              "query": [
                {
                  "key": "lang",
                  "value": "ru"
                },
                {
                  "key": "published",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Create News",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"language\": \"ru\",\n  \"title\": \"Обновление сервера\",\n  \"content\": \"Сегодня на сервер были добавлены новые функции!\",\n  \"imageUrl\": \"https://example.com/image.jpg\",\n  \"published\": true,\n  \"publishedAt\": \"2025-01-27T12:00:00Z\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/news",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "news"]
            }
          }
        }
      ]
    },
    {
      "name": "Players",
      "item": [
        {
          "name": "Get All Players",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/players",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "players"]
            }
          }
        },
        {
          "name": "Get Online Players",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/players?online=true",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "players"],
              "query": [
                {
                  "key": "online",
                  "value": "true"
                }
              ]
            }
          }
        }
      ]
    }
  ]
